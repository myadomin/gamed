@import '../../style/var.styl'
.workIM-wrap
  border: 1px solid #d9d9d9
  box-shadow: 5px 5px 5px #ddd
  height: calc(100vh - 210px)
  .left 
    float: left
    width: 280px
    height: 100%
  .leftTop 
    height: 100px
    background: #e8e8e8
  .leftBottom 
    height: calc(100% - 100px)
    background: #f0f0f0
    overflow: auto
  .right 
    float: right
    width: calc(100% - 280px)
    height: 100%
  .rightTop 
    height: calc(100% - 200px)
    overflow: auto
    background: #fafafa
    border-bottom: 1px solid #f0f0f0
  .rightBottom 
    height: 200px
    background: #fff
  .chatterList-chatters:hover 
    background: #e8e8e8
  .chatterList-active 
    background: #dfdfdf !important
  .leftText 
    margin: 10px 0
    display: flex
    align-items: flex-start
    justify-content: flex-start
  .rightText 
    margin: 10px 0
    display: flex
    align-items: flex-start
    justify-content: flex-end
  .textitem
    max-width: 40%
    position: relative
    border: 1px solid #eee
    border-radius: 4px
    line-height: 18px
    padding: 7px
    color: #333
  .leftTextItem
    @extends .workIM-wrap .textitem
    margin-left: 12px
    background: $white
  .rightTextItem
    @extends .workIM-wrap .textitem
    margin-right: 12px
    background: $white
  .arrow
    width: 10px
    height: 10px
    position: absolute
    content: ''
    top: 10px
    transform: rotate(45deg)
    -webkit-transform: rotate(45deg)
  .leftArrow
    @extends .workIM-wrap .arrow
    left: -6px
    border-left: 1px solid #eee
    border-bottom: 1px solid #eee
    background: $white
  .rightArrow
    @extends .workIM-wrap .arrow
    right: -6px
    border-right: 1px solid #eee
    border-top: 1px solid #eee
    background: $white
  .timestamp 
    font-size: 12px
    opacity: 0.5
    
  .leftDeliverReceiptItem 
    @extends .workIM-wrap .leftTextItem
    background: $yellow
  .rightDeliverReceiptItem 
    @extends .workIM-wrap .rightTextItem
    background: $yellow
  .leftDeliverReceiptArrow 
    @extends .workIM-wrap .leftArrow
    background: $yellow
    border-left: 1px solid transparent
    border-bottom: 1px solid transparent
  .rightDeliverReceiptArrow 
    @extends .workIM-wrap .rightArrow
    background: $yellow
    border-left: 1px solid transparent
    border-bottom: 1px solid transparent

  .leftSuppleItem 
    @extends .workIM-wrap .leftTextItem
    background: $red
  .rightSuppleItem 
    @extends .workIM-wrap .rightTextItem
    background: $red
  .leftSuppleArrow 
    @extends .workIM-wrap .leftArrow
    background: $red
    border-left: 1px solid transparent
    border-bottom: 1px solid transparent
  .rightSuppleArrow 
    @extends .workIM-wrap .rightArrow
    background: $red
    border-left: 1px solid transparent
    border-bottom: 1px solid transparent
